<h1>Create an Account</h1>

<%= form_for @user do |f| %>
  <%= f.label(:email, 'Email Address: ') %>
  <%= f.email_field :email, placeholder: 'example@example.com' %><br>

  <%= f.label(:username, 'Enter your username here: ') %>
  <%= f.text_field :username %><br>

  <%= f.label(:password) %>
  <%= f.password_field :password %><br>
  
  <%= f.submit %>
<% end %>