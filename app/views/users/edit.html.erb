<h1>Edit Account</h1>

<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label(:email, 'Email Address: ') %>
  <%= f.email_field :email, placeholder: 'example@example.com' %><br>

  <%= f.label(:username, 'Enter your username here: ') %>
  <%= f.text_field :username %><br>

  <%= f.label(:password) %>
  <%= f.password_field :password %><br>

  <%= f.submit %>
<% end %>

<p>
  <%= link_to 'Cancel', user_path(@user)%>
</p>